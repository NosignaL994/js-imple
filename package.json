{
  "name": "js-imple",
  "version": "1.0.0",
  "description": "A personal learning project to fork excellent frontend js code by hand writting.",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "lodash",
    "frontend",
    "learn"
  ],
  "author": "ucinhow",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.17",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.28.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^2.29.3",
    "simplify-chinese": "^1.2.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node"
  }
}
